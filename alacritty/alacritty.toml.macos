[general]
import = ["./themes/alacritty_0_12.toml"]

# CaskaydiaCove Nerd Font
[font]
normal = { family = "DejavuSansM Nerd Font", style = "Regular" }
bold = { family = "DejavuSansM Nerd Font", style = "Bold" }
italic = { family = "DejavuSansM Nerd Font", style = "Italic" }
size = 13.0
offset = { x = 0, y = 0 }

[window]
startup_mode = "Maximized"
opacity = 0.97
decorations = "none" # full | none | transparent

[cursor]
unfocused_hollow = true
blink_interval = 700
thickness = 1.0

[cursor.style]
shape = "Block"          # Block, Underline, Beam
blinking = "On"     # Never, Off, On, Always

[keyboard]
bindings = [
  { key = "C", mods = "Control|Shift", action = "Copy" }, 
  { key = "V", mods = "Control|Shift", action = "Paste" }, 
  { key = "Tab", mods = "Control", chars = "\u0001n" }, # Ctrl + Tab → tmux next-window (prefix + n)
  { key = "Tab", mods = "Control|Shift", chars = "\u0001p" }, # Ctrl + Shift + Tab → tmux previous-window (prefix + p)
  { key = "0", mods = "Option", chars = "\u00010" },  # Ctrl + 1 => tmux select-window -t 1
  { key = "1", mods = "Option", chars = "\u00011" },  # Ctrl + 1 => tmux select-window -t 1
  { key = "2", mods = "Option", chars = "\u00012" },  # Ctrl + 2 => tmux select-window -t 2
  { key = "3", mods = "Option", chars = "\u00013" },  # Ctrl + 3 => tmux select-window -t 3
  { key = "4", mods = "Option", chars = "\u00014" },  # Ctrl + 4 => tmux select-window -t 4
  { key = "5", mods = "Option", chars = "\u00015" },  # Ctrl + 5 => tmux select-window -t 5
  { key = "6", mods = "Option", chars = "\u00016" },  # Ctrl + 6 => tmux select-window -t 6
  { key = "7", mods = "Option", chars = "\u00017" },  # Ctrl + 7 => tmux select-window -t 7
  { key = "8", mods = "Option", chars = "\u00018" },  # Ctrl + 8 => tmux select-window -t 8
  { key = "9", mods = "Option", chars = "\u00019" },  # Ctrl + 9 => tmux select-window -t 9
]
